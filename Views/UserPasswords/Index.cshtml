@model Group17_iCLOTHINGApp.Models.Customer

@{
	ViewBag.Title = "Home Page";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Log In</h4>

		<hr />

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.userID, htmlAttributes: new { @style = "width: 10%;", @class = "control-label col-md-1" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.userID, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Password", htmlAttributes: new { @style = "width: 10%;", @class = "control-label col-md-1" })
			<div class="col-md-10">
				@Html.Editor("Password", new { htmlAttributes = new { @type = "password", @class = "form-control" } })
				@Html.ValidationMessage("Password", "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<i>@Html.Label("Confirm Password", htmlAttributes: new { @style = "width: 10%;", @class = "control-label col-md-1" })</i>
			<div class="col-md-10">
				@Html.Editor("Repeat Password", new { htmlAttributes = new { @type = "password", @class = "form-control" } })
				@Html.ValidationMessage("Repeat Password", "", new { @class = "text-danger" })
			</div>
		</div>

		<hr />

		<div class="form-group">
			@Html.LabelFor(model => model.customerName, htmlAttributes: new { @style = "width: 10%;", @class = "control-label col-md-1" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.customerName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.customerName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.customerDOB, htmlAttributes: new { @style = "width: 10%;", @class = "control-label col-md-1" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.customerDOB, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.customerDOB, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
