@model Group17_iCLOTHINGApp.Models.UserQuery

@{ ViewBag.Title = "Delete"; }

<h2>Delete User Query</h2>

<br>

<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Query Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.queryNo)
        </dd>

        <dt>
            Query Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.queryDate)
        </dd>

        <dt>
            Customer Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.customerName)
        </dd>

        <dt>
            Query Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.queryDescription)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />

            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary" })
        </div>
     }
</div>
