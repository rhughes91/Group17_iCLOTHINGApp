@model IEnumerable<Group17_iCLOTHINGApp.Models.UserQuery>

@{
    ViewBag.Title = "Index";
    string currentUser = Group17_iCLOTHINGApp.Controllers.UserPasswordsController.CurrentUser();
}

<h2>Submitted Item Queries</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Query Number</th>
                <th>Query Date</th>
                <th>Customer Name</th>
                <th>Query Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                if (item.Customer.userID == currentUser || currentUser == "admin")
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.queryNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.queryDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Customer.customerName)</td>
                        <td>@Html.DisplayFor(modelItem => item.queryDescription)</td>
                        <td>@Html.ActionLink("Delete Comment", "Delete", new { id = item.queryNo }, new { @class = "btn btn-danger btn-sm" })</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a href="@Url.Action("Index", "AboutUs")" class="btn btn-primary">Return to About Us</a>
