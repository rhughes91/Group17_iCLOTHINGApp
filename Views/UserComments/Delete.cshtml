@model Group17_iCLOTHINGApp.Models.UserComment

@{ ViewBag.Title = "Delete"; }

<h2>Delete User Comment</h2>

<br>

<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Comment Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.commentNo)
        </dd>

        <dt>
            Comment Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.commentDate)
        </dd>

        <dt>
            Customer Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.customerName)
        </dd>

        <dt>
            Comment Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.commentDescription)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />

                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary" })
