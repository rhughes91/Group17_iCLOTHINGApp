@model Group17_iCLOTHINGApp.Models.OrderStatus

@{
	ViewBag.Title = "Create";
}

<h2>Order Details</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Final Order Confirmation</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.Label("status", "Status", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label class="control-label">Paid</label> <!-- Predefined status -->
			</div>
		</div>

		<div class="form-group">
			@Html.Label("statusDate", "Status Date", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label class="control-label">@DateTime.Now.AddDays(14).ToString("yyyy-MM-dd")</label> <!-- Predefined status date -->
			</div>
		</div>

		<div class="form-group">
			@Html.Label("adminID", "Admin ID", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<label class="control-label">admin</label> <!-- Predefined admin ID -->
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Confirm" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>
