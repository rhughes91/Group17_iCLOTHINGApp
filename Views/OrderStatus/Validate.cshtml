@model Group17_iCLOTHINGApp.Models.OrderStatus

@{
    ViewBag.Title = "Validate";
}

<h2>Validate User Order</h2>


@Html.AntiForgeryToken()
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.orderID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.orderID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.statusDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.statusDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status)
        </dd>
    </dl>
</div>


<div class="form-group">
    <a href="@Url.Action("Index", "OrderStatus")" class="btn btn-primary">Return to cart</a>
    <input type="submit" value="Validate Order" class="btn btn-success" id="saveAndBackBtn" />
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#saveAndBackBtn').click(function () {
                // Submit the form
                $(this).closest('form').submit();

                // Redirect to the Index page
                window.location.href = '@Url.Action("Index", "OrderStatus")';
            });
        });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}
