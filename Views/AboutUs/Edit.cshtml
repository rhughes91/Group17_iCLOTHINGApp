@model Group17_iCLOTHINGApp.Models.AboutUs

@{ ViewBag.Title = "Edit Company Details";
                string currentUser = Group17_iCLOTHINGApp.Controllers.UserPasswordsController.CurrentUser(); }

<h2>Edit</h2>

@if (ViewBag.ErrorMessage != null)
{
<div class="alert alert-danger">@ViewBag.ErrorMessage</div>}


@using (Html.BeginForm())
{
@Html.AntiForgeryToken() if (currentUser != "admin")
                {
<div> This page is for Administrators only! </div>

