@model Group17_iCLOTHINGApp.Models.ShoppingCart

@{ ViewBag.Title = "Edit"; }

<h2>Change Item Quantity</h2>


@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.cartID)
                    @Html.HiddenFor(model => model.productPrice)

                    <div class="form-group">
                        @Html.LabelFor(model => model.productQuantity, "Product Quantity", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.productQuantity, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.productQuantity, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.HiddenFor(model => model.productID)
                    @Html.HiddenFor(model => model.customerID)



                    <div class="form-group">
                        <a href="@Url.Action("Index", "ShoppingCarts")" class="btn btn-primary">Return to cart</a>
                        <button type="submit" class="btn btn-success">Change Quantity</button>
                    </div>
                </div>}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
